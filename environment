# bash only

# macros i use for testing

# load with `source ./environment`
# limit to 2 GB to stop exploding processes
ulimit -Sv 2000000

aith() {
  cabal run aith -- $@
}

aith_repl() {
  cabal repl $@
}

aith_build() {
  cabal build aith $@
}

aith_test() {
  cabal test
}

aith_test_generate() {
  aith --load test.aith /test --generate-c /test test.c && clang-format -i test.c
}

aith_format() {
  scripts/format.sh
}
