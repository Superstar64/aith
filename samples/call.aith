module:
inline call = ``\returnRep : %representation => ``\ argumentRep : %representation {
	`\returnType : %type %runtime returnRep => `\argumentType : %type %runtime argumentRep {
		\f : returnType(*)(argumentType) => \x : argumentType {
			f(*)(x)
		}
	}
};

function idImpl = <a> (a)(x : a){
	x
};

inline id = `\a => call``(%pointer)``(%pointer)`(a)`(a)(idImpl`(a)); 

function useId = <a> (a)(x : a){
	id`(a)(x)
};
