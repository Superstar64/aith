module:
inline call = ``\returnRep : _representation => ``\ argumentRep : _representation {
	`\returnType : _type _runtime returnRep => `\argumentType : _type _runtime argumentRep {
		\f : returnType(*)(argumentType) => \x : argumentType {
			f(*)(x)
		}
	}
};

function idImpl = `\a (x : a){
	x
};

inline id = `\a => call``(_pointer)``(_pointer)`(a)`(a)(idImpl`(a)); 

function useId = `\a (x : a){
	id`(a)(x)
};
