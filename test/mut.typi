ping = x {
	if x {
		true
	} else {
		true.pong
	}
};

pong = x {
	if x {
		true
	} else {
		true.ping
	}
};

void = (&&);

main : void -> void;
main = () {
	() = false.ping.assert;
	() = false.pong.assert;
	() = true.ping.assert;
	() = true.pong.assert;
	()
};

assert : boolean -> void;
assert = extern "assert";
