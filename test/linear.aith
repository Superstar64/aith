module:

inline dup = `\b : _type _meta {
	\!(x : b) =>
	`\r : _type _meta =>
	\(f : !b -> !b -> r) =>
	f(!x)(!x)
};

inline main = `\a : _type _meta {
	`\b : _type _meta =>

	\(f : a -> !b) =>
	\(x : a) =>

	dup`(b)(f(x))
};


function wasteful = `\a when(_copy a) (x : a, y : a){
	x
};

function ignoreFPtr = `\a (x : a, f : a(*)(a)){
	x
};

function useWasteful = `\a (xf : a(*)(a), yf: a(*)(a)) {
	wasteful`(a(*)(a))?(*) #(xf, yf)
};
