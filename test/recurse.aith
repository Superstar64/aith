~ <a extends number & add class & equal & unrestricted> a -> a ~
template ping = x {
	if (x == 100) {
		x
	} else {
		pong`(x+1)
	}
};

~ <b extends number & add class & equal & unrestricted> b -> b ~
template pong = x {
	if (x == 100) {
		x
	} else {
		ping`(x+1)
	}
};

~ world -> (& (&&), world &) ~
symbol main = do {
	run assert(ping`(1 : integer32) == 100);
	run assert(pong`(1 : natural32) == 100);
	()
};

