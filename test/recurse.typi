ping = x {
	if x {
		true
	} else {
		true.pong
	}
};

pong = x {
	if x {
		true
	} else {
		true.ping
	}
};

~ world -> world ~
symbol main = os {
	|os| = assert(false.ping, os);
	|os| = assert(false.pong, os);
	|os| = assert(true.ping, os);
	|os| = assert(true.pong, os);
	os
};

~ (& boolean, world &) -> world ~
assert = extern "assert";
